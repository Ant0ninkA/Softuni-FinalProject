@model RegisterFormViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="FirstName" class="form-control" aria-required="true" placeholder="" />
                <label asp-for="FirstName">Firstname</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="LastName" class="form-control" aria-required="true" placeholder="" />
                <label asp-for="LastName">Lastname</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100">Register</button>
        </form>
    </div>

</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa; 
        color: #333;
        margin: 0;
        padding: 0;
    }

    .row {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    form {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 30px 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
        text-align: center;
        color: #BF0065;
        font-weight: bold;
        margin-bottom: 20px;
    }

    hr {
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }

    .form-floating {
        position: relative;
        margin-bottom: 15px;
    }

    input.form-control {
        border: 1px solid #BF0065;
        border-radius: 5px;
        height: 50px;
        padding-left: 15px;
        padding-right: 15px;
        font-size: 16px;
    }

    input:focus {
        border-color: #970176;
        outline: none;
        box-shadow: 0 0 5px rgba(151, 1, 118, 0.5);
    }

    label {
        color: #555;
        font-size: 14px;
        transition: all 0.2s ease;
    }

    input:focus + label {
        color: #970176;
        font-weight: bold;
    }

    .text-danger {
        font-size: 12px;
        margin-top: 5px;
    }

    button {
        background-color: #BF0065;
        border: none;
        border-radius: 5px;
        padding: 10px;
        font-size: 18px;
        color: white;
        transition: background-color 0.3s ease;
    }

    button:hover {
        background-color: #970176;
        cursor: pointer;
    }

    
    media (max-width: 800px) {
    form {
        width: 90%;
    }

    h1, h2 {
        font-size: 1.5rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


