    .event-card {
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .event-card:hover {
            transform: scale(1.02);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

    .event-title h4 {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .event-poster img {
        width: 100%;
        height: auto;
        max-height: 250px;
        object-fit: contain;
        border-radius: 8px;
    }

    .like-btn {
        color: #BF0065;
        border-color: #BF0065; 
        padding: 8px 14px;
        font-size: 0.9rem;
        border-radius: 10px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .like-btn:hover {
         background-color: #BF0065;
         color: white;
     }

    .buy-tickets-btn {
        background-color: #28a745;
        color: white;
        padding: 12px 20px;
        font-size: 1rem;
        font-weight: bold; 
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

     .buy-tickets-btn:hover {
         background-color: #218838; 
         transform: scale(1.05);
     }

    .details-btn {
        color: #BF0065;
        border-color: #BF0065;
        padding: 8px 14px;
        font-size: 0.9rem;
        border-radius: 10px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .details-btn:hover {
        background-color: #BF0065;
        color: white;
     }

    .d-flex {
        gap: 10px;
    }

    .mt-auto {
        margin-top: auto;
    }

</style>
