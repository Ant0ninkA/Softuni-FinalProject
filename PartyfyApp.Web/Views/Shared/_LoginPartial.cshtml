@using Microsoft.AspNetCore.Identity

@using PartyfyApp.Data.Models
@using PartyfyApp.Services.Data.Interfaces
@using PartyfyApp.Web.Infrastructure.Extensions

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserService _userService

@inject IHosterService _hosterService
@{
    bool isUserAgent = await _hosterService.HosterExistsByIdAsync(User.GetId()!);
    //string userFullName = await _userService.GetFullNameByEmailAsync(User.Identity?.Name!);
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    if (!isUserAgent)
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Hoster" asp-action="Become">Become Hoster</a>
        </li>
    }
    <li class="nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-light">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
