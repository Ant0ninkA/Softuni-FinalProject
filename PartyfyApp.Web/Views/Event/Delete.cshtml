@model EventPreDeleteViewModel

@{
    ViewBag.Title = "Delete Event";
}

<div class="text-center mb-4" style="color: #BF0065;">
    <h2>@ViewBag.Title</h2>
    <hr style="border-color: #BF0065;" />
</div>

<form method="post" asp-action="Delete" class="p-4" style="background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div class="row">
        <div class="col-md-4 text-center">
            <img class="img-fluid rounded" src="@Model.PosterImg" alt="Event Poster" style="border: 2px solid #BF0065; border-radius: 8px; max-width: 100%; height: auto;">
        </div>
        <div class="col-md-8">
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label" style="color: #970176;"></label>
                <input asp-for="Title" class="form-control" disabled="disabled" style="background-color: #e9ecef; color: #6c757d; border-color: #BF0065;" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="EventDate" class="form-label" style="color: #970176;"></label>
                <input asp-for="EventDate" type="date" class="form-control" disabled="disabled" style="background-color: #e9ecef; color: #6c757d; border-color: #BF0065;" />
            </div>
            <div class="form-group mt-4 text-center">
                <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #BF0065; border-color: #BF0065; color: white;" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-label {
        font-weight: bold;
    }
</style>
