@model BecomeHosterFormModel

@{
    ViewBag.Title = "Become Hoster";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+359888888888">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input id="save" class="btn btn-primary mt-3 " type="submit" value="Save" />
            </div>
        </form>
        <br />
        <br />
        <div class="text-container">
            <h3 class="text-center">Why become a hoster?</h3>
            <ul>
                <li><strong>Full Creative Control:</strong> Design and execute the event exactly the way you want, from the lineup to the ambiance.</li>
                <li><strong>Earn Revenue:</strong> Monetize your events and earn from ticket sales directly through our platform.</li>
                <li><strong>Reach a Broader Audience:</strong> Tap into our user base to promote your events and get discovered by party enthusiasts in your area.</li>
            </ul>
        </div>
    </div>
</div>

<style>
    body {
        height: 100%;
        background-image: url('@Url.Content("~/images/become.jpg")');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        font-family: Poppins, sans-serif;
        font-weight: 300;
        color: white;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: 2px solid #970176;
    }

    .form-control {
        border-radius: 20px;
    }

    .form-control:focus {
            outline: none !important; 
            box-shadow: none !important; 
            border-color: solid #CA005E;
    }

    #save {
        background-color: white;
        color: #CA005E;
        border: solid #970176;
        padding: 12px 24px;
        border-radius: 30px;
        font-size: 15px;
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    #save:hover {
         background-color: #970176;
         transform: translateY(-3px);
         box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
    }

    #save:active {
         transform: translateY(0);
         box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
